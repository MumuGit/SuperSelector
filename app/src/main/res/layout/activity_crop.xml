<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/done_cancel_bar"
        layout="@layout/crop__layout_done_cancel" />

    <com.ly.selector.customview.CropImageView
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        custom:cropMode="ratio_free"
        custom:guideShowMode="show_on_touch"
        custom:guideColor="@android:color/holo_blue_dark"
        custom:frameColor="@android:color/holo_blue_dark"
        custom:handleColor="@android:color/holo_blue_dark"
        android:id="@+id/crop_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/crop__texture"
        android:layout_below="@id/done_cancel_bar" />
</RelativeLayout>